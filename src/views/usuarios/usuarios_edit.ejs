<%- include("../partials/header") %>

    <title>Editar Usuarios</title>

    <%- include("../partials/_header") %>

        <div class="container mx-5 my-5">
            <div class="row mx-5">
                <div class="col-md-8">
                    <div class="card">
                        <h5 class="modal-title text-center">Editar usuario</h5>
                        <div class="card-body">
                            <form action="/update/<%= data.id %> " method="post">
                                <div class="form-group mt-2">
                                    <input type="text" name="nombre" value="<%= data.nombre %>" class="form-control">
                                </div>
                                <div class="form-group mt-2">
                                    <input type="text" name="documento" value="<%= data.documento %>"
                                        class="form-control">
                                </div>
                                <div class="form-group mt-2">
                                    <input type="text" name="email" value="<%= data.email %>" class="form-control">
                                </div>
                                <div class="form-group mt-2">
                                    <input type="text" name="estado" value="<%= data.estado %>" class="form-control">
                                </div>
                                <div class="text-center">
                                    <button type="submit" class="btn btn-success mt-4">Guardar Usuario</button>
                                    <a class="btn btn-danger mt-4" href="/usuarios"">Cancelar</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

        </div>

        <%- include("../partials/_footer") %>