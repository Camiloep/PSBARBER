<%- include('../partials/header') %>

    <title>Compra</title>

    <%- include('../partials/_header') %>

        <div class="container">

            <!-- Button trigger modal -->
            <button type="button" class="btn btn-success mt-4" data-bs-toggle="modal" data-bs-target="#exampleModal">
                Agregar Compra
            </button>

            <!-- Modal -->
            <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel"
                aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Agregar compra</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <div class="col-ms-10">
                                <form action="/addCompra" method="post">
                                    <div class="form-group mt-2">
                                        <input type="date" name="fecha" placeholder="Fecha Compra" class="form-control"
                                            required>
                                    </div>
                                    <div class="form-group mt-2">
                                        <input type="number" name="total" placeholder="Total" class="form-control"
                                            required>
                                    </div>
                                    <div class="form-group mt-2">
                                        <input type="text" name="estado" placeholder="estado" class="form-control"
                                            required>
                                    </div>
                                    <div class="text-center">
                                        <button type="submit" class="btn btn-primary mt-4">Guardar Compra</button>
                                        <button type="button" class="btn btn-secondary mt-4"
                                            data-bs-dismiss="modal">Cancelar</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row mt-2">
                <div class="col-md-10">
                    <table id="example" class="table table-bordered table-hover me-5 text-center">
                        <thead class="bg-dark text-light">
                            <tr>
                                <th> ID </th>
                                <th>Fecha</th>
                                <th>Total</th>
                                <th>Estado</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody class="text-center ">
                            <% if(data){ %>
                                <% for(let i=0; i < data.length; i++ ){%>
                                    <tr>
                                        <td>
                                            <%= (i+1) %>
                                        </td>
                                        <td>
                                            <%= data[i].fecha %>
                                        </td>
                                        <td>
                                            <%= data[i].total %>
                                        </td>
                                        <td>
                                            <%= data[i].estado %>
                                        </td>
                                        <td class="text-center">
                                            <a onclick="confirmarEliCom(<%= data[i].id %>)" class="btn btn-danger">Eliminar</a>
                                            <!-- <a href="/updateCompra/<%= data[i].id_Compra %>"
                                                class="btn btn-info mt-2">actualizar</a> -->
                                        </td>
                                    </tr>
                                    <%} %>
                                        <% } %>
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
        <%- include('../partials/_footer') %>